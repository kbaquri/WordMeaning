<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/custom"
    android:id="@+id/relativeLayoutStartActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/bg">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="3.0dip"
        android:layout_marginLeft="5.0dip"
        android:background="@mipmap/btn_setting_normal"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/btnRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnSettings"
        android:layout_marginLeft="7.0dip"
        android:layout_toRightOf="@id/btnSettings"
        android:background="@mipmap/btn_rate_normal"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/btnLeaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2.0dip"
        android:layout_marginRight="7.0dip"
        android:background="@mipmap/btn_leaderboard_normal"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/btnChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSettings"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_challenge" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnChallenge"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/btn_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPlay"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:background="@mipmap/btn_score"
            android:gravity="center"
            android:text="0"
            android:textSize="40dp" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/txtProgress"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            custom:donut_progress="30" />

        <TextView
            android:id="@+id/btnHint"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:background="@mipmap/hint"
            android:gravity="center"
            android:textColor="#FE2E2E"
            android:textSize="30dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/word_game" />

</RelativeLayout>